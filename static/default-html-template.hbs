<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
      <title>{{name}}</title>
      {{#if htmlCss}}
        <link rel="stylesheet" type="text/css" href="{{html_css}}" />
      {{else}}
        <style>
          body {
            margin: 0;
            padding: 0;
            position: absolute;
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
          }

          #canvas {
            width: 100%;
            height: 100%;
            position: absolute;
            left: 0;
            top: 0;
          }
        </style>
      {{/if}}

      {{#if javascriptTarget}}
        <script type="text/javascript" src="{{javascriptTarget}}"></script>
      {{/if}}
  </head>
  <body>
    <canvas id="canvas"></canvas>
  </body>
</html>
